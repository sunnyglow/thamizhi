<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="450.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView75"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#fcf3cf"
                android:gravity="center"
                android:text="எழுத்துக்களை உள்ளிடுக"
                android:textSize="25sp"
                tools:text="எழுத்துக்களை உள்ளிடுக" />

            <EditText
                android:id="@+id/textArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fcf3cf"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.0"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/layout_whiteselector"
                app:srcCompat="@mipmap/prev" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/layout_whiteselector"
                app:srcCompat="@mipmap/play" />

            <ImageView
                android:id="@+id/pause"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/layout_whiteselector"
                app:srcCompat="@mipmap/pause" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/layout_whiteselector"
                app:srcCompat="@mipmap/next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>